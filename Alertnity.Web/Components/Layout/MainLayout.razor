@inherits LayoutComponentBase

<div class="page">
    <main>
        <NavMenu />
        <article class="content px-4" style="background-color:  #faf9f6;">

            <CascadingValue Value="@ApplicationState">
                @Body
            </CascadingValue>
       
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
@code{
    public AppState ApplicationState { get; set; } = new();
}

